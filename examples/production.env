#####################################
# MCP Gateway Production Configuration
#####################################

# Basic Server Configuration
HOST=0.0.0.0
PORT=4444
ENVIRONMENT=production
APP_DOMAIN=your-domain.com

# Database Configuration (Use PostgreSQL for production)
DATABASE_URL=postgresql://mcp_user:secure_password@localhost:5432/mcp_prod

# Cache Configuration (Use Redis for production)
CACHE_TYPE=redis
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_RETRIES=5
REDIS_RETRY_INTERVAL_MS=1000

#####################################
# Protocol Settings
#####################################

PROTOCOL_VERSION=2025-03-26

#####################################
# Authentication (CHANGE THESE!)
#####################################

# Strong credentials for production
BASIC_AUTH_USER=admin_prod
BASIC_AUTH_PASSWORD=your_very_secure_password_here
AUTH_REQUIRED=true

# Strong JWT configuration
JWT_SECRET_KEY=your_very_long_random_secret_key_minimum_32_characters
JWT_ALGORITHM=HS256
TOKEN_EXPIRY=1440
REQUIRE_TOKEN_EXPIRATION=true

# MCP Client Authentication
MCP_CLIENT_AUTH_ENABLED=true

#####################################
# Security Headers
#####################################

CORS_ALLOWED_ORIGINS=["https://your-domain.com"]
CORS_ALLOW_CREDENTIALS=true

#####################################
# Logging
#####################################

LOG_LEVEL=INFO
LOG_FORMAT=json

#####################################
# Rate Limiting
#####################################

RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

#####################################
# Health Checks
#####################################

HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30

#####################################
# TLS/SSL (if not behind load balancer)
#####################################

SSL_ENABLED=true
SSL_CERT_PATH=/path/to/your/cert.pem
SSL_KEY_PATH=/path/to/your/key.pem